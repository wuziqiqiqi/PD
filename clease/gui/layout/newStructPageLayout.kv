#: set button_height 0.05
<NewStructPage>:
    StackLayout:
        id: mainConcLayout

        Button:
            id: toInput
            size_hint: [0.25, button_height]
            text: 'Input'
            on_release:
                root.manager.current = 'Input'
                root.manager.transition.direction = 'right'
        
        Button:
            id: concEditor
            text: 'Concentration'
            size_hint: [0.25, button_height]
            on_release:
                root.manager.current = 'Concentration'
                root.manager.transition.direction = 'right'

        Button:
            id: toNewStruct
            text: 'New structures'
            size_hint: [0.25, button_height]
            on_release:
                root.manager.current = 'NewStruct'
                root.manager.transition.direction = 'right'
        
        Button:
            id: toFit
            text: 'Fit'
            size_hint: [0.25, button_height]
            on_release:
                root.manager.current = 'Fit'
                root.manager.transition.direction = 'left'



        Label:
            size_hint: [1, 2*button_height]
            text: 'Import Structure'

        Label:
            size_hint: [0.3, button_height]
            text: 'Initial structure'
            
        TextInput:
            size_hint: [0.5, button_height]
            id: initStructInput
            text: ''

        Button:
            size_hint: [0.2, button_height]
            id: loadInitStruct
            text: 'Load'
            on_release: root.show_load_init_struct_dialog()
        

        Label:
            size_hint: [0.3, button_height]
            text: 'Final structure'

        TextInput:
            size_hint: [0.5, button_height]
            id: finalStructInput
            text: ''

        Button:
            size_hint: [0.2, button_height]
            id: loadFinalStruct
            text: 'Load'
            on_release: root.show_load_final_struct_dialog()

        Label:
            size_hint: [1, 0.7*button_height]
            text: ''

        Label:
            size_hint: [0.4, button_height]
            text: ''
        Button:
            size_hint: [0.2, button_height]
            id: importStructures
            text: 'Import structure'
            on_release: root.import_structures()
        Label:
            size_hint: [0.4, button_height]
            text: ''

        Label:
            size_hint: [1, 0.5*button_height]
            text: ''




        Label:
            size_hint: [1, 2*button_height]
            text: 'Generate Structure'

        Label:
            size_hint: [0.5, button_height]
            text: 'Generation Scheme:'
        Spinner:
            size_hint: [0.5, button_height]
            id: newStructTypeSpinner
            text: 'Random structure'
            values: 'Random structure', 'Minimum energy structure', 'Probe structure'
            on_text: root.on_new_struct_type_update(self.text)

        Label:
            size_hint: [1, 0.5*button_height]
            text: ''

        Label:
            size_hint: [0.25, button_height]
            id: tempMaxLabel
            text: 'Max. temperature'
        
        Label:
            size_hint: [0.25, button_height]
            id: tempMinLabel
            text: 'Min. temperature'

        Label:
            size_hint: [0.25, button_height]
            id: numTempLabel
            text: 'Num. temperatures'

        Label:
            size_hint: [0.25, button_height]
            id: numSweepsLabel
            text: 'Sweeps per temp'
        
        TextInput:
            size_hint: [0.25, button_height]
            id: tempMaxInput
            input_filter: 'float'
            text: '10000'

        TextInput:
            size_hint: [0.25, button_height]
            id: tempMinInput
            input_filter: 'float'
            text: '1'

        TextInput:
            size_hint: [0.25, button_height]
            id: numTempInput
            input_filter: 'int'
            text: '100'

        TextInput:
            size_hint: [0.25, button_height]
            id: numSweepsInput
            input_filter: 'int'
            text: '100'

        Label:
            size_hint: [1, 0.5*button_height]
            text: ''

        Label:
            size_hint: [0.3, button_height]
            id: eciFileLabel
            text: 'ECI file'

        TextInput:
            size_hint: [0.5, button_height]
            id: eciFileInput
            text: ''

        Button:
            size_hint: [0.2, button_height]
            id: loadECIFile
            text: 'Load'
            on_release: root.show_load_eci_dialog()

        Label:
            size_hint: [0.3, button_height]
            id: templateAtomsLabel
            text: 'Template'
        
        TextInput:
            size_hint: [0.5, button_height]
            id: templateAtomsInput
            text: ''

        Button:
            size_hint: [0.2, button_height]
            id: loadTemplateAtoms
            text: 'Load'
            on_release: root.show_load_template_dialog()
        
        Label:
            size_hint: [1, 0.5*button_height]
            text: ''
        
        Label:
            size_hint: [0.5, button_height]
            text: 'Composition Scheme:'

        Spinner:
            size_hint: [0.5, button_height]
            id: randomizeCompositionSpinner
            text: 'Random composition'
            values: 'Random composition', 'Composition in template'
        
        Label:
            size_hint: [1, 0.5*button_height]
            text: ''
        
        Label:
            size_hint: [0.4, button_height]
            text: ''
        Button:
            size_hint: [0.2, button_height]
            id: generateButton
            text: 'Generate structure'
            on_release: root.generate()
        Label:
            size_hint: [0.4, button_height]
            text: ''

        Label:
            size_hint: [1, 0.5*button_height]
            text: ''
        Label:
            size_hint: [0.2, button_height]
            text: 'Status:'
        Label:
            size_hint: [0.8, button_height]
            id: status
            text: 'Idle'

            
            
