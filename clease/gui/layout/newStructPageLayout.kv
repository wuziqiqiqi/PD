#: set height 0.05
<NewStructPage>:
    id: mainConcLayout

    StackLayout:

        Button:
            id: concEditor
            text: 'Concentration'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'Concentration'
                root.manager.transition.direction = 'right'

        Button:
            id: toSettings
            size_hint: [0.25, height]
            text: 'Settings'
            on_release:
                root.manager.current = 'Settings'
                root.manager.transition.direction = 'right'

        Button:
            id: toNewStruct
            text: 'New structures'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'NewStruct'

        Button:
            id: toFit
            text: 'Fit'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'Fit'
                root.manager.transition.direction = 'left'


        StackLayout:
            size_hint: [1, 1.5*height]

            Label:
                size_hint: [1, 1]
                text: 'Import Structure'


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.2, 1]
                text: 'Initial structure'

            TextInput:
                size_hint: [0.5, 1]
                id: initStructInput
                text: ''

            Button:
                size_hint: [0.2, 1]
                id: loadInitStruct
                text: 'Load'
                on_release: root.show_load_init_struct_dialog()

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.2, 1]
                text: 'Final structure'

            TextInput:
                size_hint: [0.5, 1]
                id: finalStructInput
                text: ''

            Button:
                size_hint: [0.2, 1]
                id: loadFinalStruct
                text: 'Load'
                on_release: root.show_load_final_struct_dialog()

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, 0.7*height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.4, 1]
                text: ''
            Button:
                size_hint: [0.2, 1]
                id: importStructures
                text: 'Import'
                on_release: root.import_structures()
            Label:
                size_hint: [0.4, 1]
                text: ''


        StackLayout:
            size_hint: [1, 0.7*height]


        StackLayout:
            size_hint: [1, 1.5*height]

            Label:
                size_hint: [1, 1]
                text: 'Generate Structure'

        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.2, 1]
                text: ''

            Label:
                size_hint: [0.2, 1]
                text: 'Generation Scheme'
            Spinner:
                size_hint: [0.4, 1]
                id: newStructTypeSpinner
                text: 'Random structure'
                values: 'Random structure', 'Minimum energy structure', 'Probe structure'
                on_text: root.on_new_struct_type_update(self.text)

            Label:
                size_hint: [0.2, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.225, 1]
                id: tempMaxLabel
                text: 'Max. temperature'

            Label:
                size_hint: [0.225, 1]
                id: tempMinLabel
                text: 'Min. temperature'

            Label:
                size_hint: [0.225, 1]
                id: numTempLabel
                text: 'No. temperatures'

            Label:
                size_hint: [0.225, 1]
                id: numSweepsLabel
                text: 'Sweeps per temp.'

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            TextInput:
                size_hint: [0.225, 1]
                id: tempMaxInput
                input_filter: 'float'
                text: '10000'

            TextInput:
                size_hint: [0.225, 1]
                id: tempMinInput
                input_filter: 'float'
                text: '1'

            TextInput:
                size_hint: [0.225, 1]
                id: numTempInput
                input_filter: 'int'
                text: '100'

            TextInput:
                size_hint: [0.225, 1]
                id: numSweepsInput
                input_filter: 'int'
                text: '100'

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, 0.5*height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.3, 1]
                id: templateAtomsLabel
                text: 'Template'

            TextInput:
                size_hint: [0.4, 1]
                id: templateAtomsInput
                text: ''

            Button:
                size_hint: [0.2, 1]
                id: loadTemplateAtoms
                text: 'Load'
                on_release: root.show_load_template_dialog()

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.3, 1]
                id: eciFileLabel
                text: 'ECI file'

            TextInput:
                size_hint: [0.4, 1]
                id: eciFileInput
                text: ''

            Button:
                size_hint: [0.2, 1]
                id: loadECIFile
                text: 'Load'
                on_release: root.show_load_eci_dialog()

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.3, 1]
                text: 'Composition Scheme'

            Label:
                size_hint: [0.1, 1]
                text: ''

            Spinner:
                size_hint: [0.5, 1]
                id: randomizeCompositionSpinner
                text: 'Random composition'
                values: 'Random composition', 'Composition in template'

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, 0.5*height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.4, 1]
                text: ''
            Button:
                size_hint: [0.2, 1]
                id: generateButton
                text: 'Generate'
                on_release: root.generate()

            Label:
                size_hint: [0.4, 1]
                text: ''

        FloatLayout:
            size_hint: [1, 2*height]
            pos_hint: {"x": 0.0, 'bottom':0.0}

            Label:
                size_hint: [0.2, 1]
                pos_hint: {"x": 0.0, 'bottom':0.0}
                text: 'Status:'

            Label:
                id: status
                size_hint: [0.8, 1]
                pos_hint: {"x": 0.2, 'bottom':0.0}
                text: 'Idle'
