#:import webbrowser webbrowser
<ActionBar>:

    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'CLEASE'
            with_previous: False
            app_icon: 'clease_logo.png'
            on_release: webbrowser.open('https://computationalmaterials.gitlab.io/clease/')


        ActionButton:
            text: 'Reconfig. DB'
            on_release: app.root.reconfig()

        ActionGroup:
            id: View_AG
            mode: 'spinner'
            text: 'View'
            ActionButton:
                text: 'Clusters'
                on_release: app.root.view_clusters()
            ActionButton:
                text: 'DB'
                on_release: app.root.view_training_db()
            ActionButton:
                text: 'MC cell'
                on_release: app.root.view_mc_cell()


        ActionGroup:
            id: Export_AG
            mode: 'spinner'
            text: 'Export'

            ActionButton:
                id: exportFitDataButton
                text: 'Fit Data'
                on_press: app.root.show_export_fit_data_dialog()

            ActionButton:
                id: exportSettings
                text: 'Settings'
                on_press: app.root.show_export_settings_dialog()

        ActionGroup:
            id: Session_AG
            mode: 'spinner'
            text: 'Session'

            ActionButton:
                id: saveButton
                text: 'Save'
                on_press: app.root.save_session_to_current_file()

            ActionButton:
                id: saveAsButton
                text: 'Save As...'
                on_press: app.root.show_save_dialog()

            ActionButton:
                id: loadButton
                text: 'Load'
                on_press: app.root.show_load_session_dialog()

            ActionButton:
                id: closeButton
                text: 'Close'
                on_press: app.get_running_app().stop()