<MCPage>:
    name: 'MC'
    StackLayout:
        BoxLayout:
            size_hint: [0.05, 1]

        BoxLayout:
            size_hint: [0.45, 1]
            orientation: 'vertical'
            BoxLayout:
                id: energyPlot
                size_hint: [1, 0.5]
            
        StackLayout:
            size_hint: [0.40, 1]

            Label:
                size_hint: [0.3, 0.05]
                text: 'MC DB'
            
            TextInput:
                size_hint: [0.6, 0.05]
                text: ''
                id: mc_db_input
                multiline: False
                write_tab: False

            Button:
                size_hint: [0.05, 0.05]
                text: '?'
                on_release: root.show_db_help_message()

            Button:
                size_hint: [0.05, 0.05]
                text: 'O'
                on_release: root.open_load_dialog()
        
            Label:
                size_hint: [1, 0.05]
                text: 'Temperatures'
            TextInput:
                size_hint: [0.95, 0.05]
                id: tempInput
                text: ''
                placeholder: 'Comma sep. list of temps'
                multiline: False
                write_tab: False

            Button:
                size_hint: [0.05, 0.05]
                text: '?'
                on_release: root.show_temp_help_message()
            
            Label:
                size_hint: [0.5, 0.05]
                text: 'Sweeps per temp'

            TextInput:
                size_hint: [0.5, 0.05]
                id: sweepInput
                text: '100'
                multiline: False
                input_filter: 'int'
                write_tab: False
            
            Label:
                size_hint: [1, 0.05]
                text: 'Concentrations/systems'
            
            TextInput:
                size_hint: [0.95, 0.05]
                id: concInput
                text: ''
                multiline: False
                write_tab: False

            Button:
                size_hint: [0.05, 0.05]
                text: '?'
                on_release: root.show_conc_help_message()

            Label:
                size_hint: [0.5, 0.05]
                text: 'Size'
            
            TextInput:
                size_hint: [0.45, 0.05]
                id: sizeInput
                text: '1'
                on_text_validate: root.set_cell_info()
                multiline: False
                write_tab: False
                input_filter: 'int'
            
            Button:
                size_hint: [0.05, 0.05]
                text: '?'
                on_release: root.show_size_help_message()

            Label:
                size_hint: [1, 0.05]
                text: 'MC cell info:'

            Label:
                size_hint: [1, 0.05]
                id: mc_cell_lengths
                text: 'a: b: c: '
            
            Label:
                size_hint:  [1, 0.05]
                id: mc_cell_angles
                text: 'alpha: beta: gamma'

            Label:
                size_hint: [1, 0.05]
                id: mc_num_atoms
                text: 'Num atoms.'
            
            Button:
                size_hint: [1, 0.05]
                text: 'View MC cell'
                on_release: root.view_mc_cell()

            Button:
                size_hint: [1, 0.05]
                text: 'Run'
                on_release: root.runMC()

        BoxLayout:
            size_hint: [0.05, 1]

    