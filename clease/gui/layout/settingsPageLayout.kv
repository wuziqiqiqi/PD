#: set height 0.05
<SettingsPage>:
    StackLayout:

        Button:
            id: concEditor
            text: 'Concentration'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'Concentration'
                root.manager.transition.direction = 'right'

        Button:
            id: toSettings
            size_hint: [0.25, height]
            text: 'Settings'
            on_release:
                root.manager.current = 'Settings'

        Button:
            id: toNewStruct
            text: 'New structures'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'NewStruct'
                root.manager.transition.direction = 'left'

        Button:
            id: toFit
            text: 'Fit'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'Fit'
                root.manager.transition.direction = 'left'


        StackLayout:
            size_hint: [1, 0.25*height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.225, 1]
                id: ceType
                text: 'Type'

            Label:
                size_hint: [0.225, 1]
                id: bfLabel
                text: 'Basis func.'

            Label:
                size_hint: [0.225, 1]
                id: maxClusterSizeLabel
                text: 'Max cl. size'

            Label:
                size_hint: [0.225, 1]
                id: maxClusterDiaLabel
                text: 'Max cl. dia (ang)'

            Label:
                size_hint: [0.05, 1]
                text: ''

        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Spinner:
                size_hint: [0.225, 1]
                id: typeSpinner
                text: 'CEBulk'
                values: 'CEBulk', 'CECrystal'
                on_text: root.update_input_section(self.text)

            Spinner:
                size_hint: [0.225, 1]
                id: bfSpinner
                text: 'Sanchez'
                values: 'Sanchez', 'van de Walle', 'Sluiter'

            TextInput:
                size_hint: [0.225, 1]
                id: clusterSize
                text: '4'
                input_filter: 'int'

            TextInput:
                size_hint: [0.225, 1]
                id: clusterDia
                text: '5.0'

            Label:
                size_hint: [0.05, 1]
                text: ''

        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.225, 1]
                id: sizeSpecificationType
                text: 'Size mode'

            Label:
                size_hint: [0.225, 1]
                id: sizeLabel
                text: 'Cell size'

            Label:
                size_hint: [0.225, 1]
                id: supercellFactLabel
                text: 'SC factor'

            Label:
                size_hint: [0.225, 1]
                id: skewnessLabel
                text: 'Skew factor'

            Label:
                size_hint: [0.05, 1]
                text: ''

        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Spinner:
                size_hint: [0.225, 1]
                id: sizeSpinner
                text: 'Fixed'
                values: 'Fixed', 'Mult. factor'
                on_text: root.update_size_section(self.text)

            TextInput:
                size_hint: [0.225, 1]
                id: sizeInput
                text: '3, 3, 3'

            TextInput:
                size_hint: [0.225, 1]
                id: scFactorInput
                text: '20'
                input_filter: 'int'

            TextInput:
                size_hint: [0.225, 1]
                id: skewFactorInput
                text: '4'
                input_filter: 'int'

            Label:
                size_hint: [0.05, 1]
                text: ''

        StackLayout:
            size_hint: [1, height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.3, 1]
                id: dbChooser
                text: 'Structure database'

            TextInput:
                size_hint: [0.4, 1]
                id: dbNameInput
                text: ''

            Button:
                size_hint: [0.2, 1]
                id: loadDbButton
                text: 'Load'
                on_release: root.show_load_dialog()

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, 0.5*height]


        StackLayout:
            size_hint: [1, 1.5*height]

            Label:
                id: CEBulkTitle
                size_hint: [1.0, 1]
                text: 'CEBulk parameters'

        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.225, 1]
                id: crystStruct
                text: 'Crystal structure'

            Label:
                size_hint: [0.225, 1]
                id: aParameter
                text: 'a'

            Label:
                size_hint: [0.225, 1]
                id: cParameter
                text: 'c'

            Label:
                size_hint: [0.225, 1]
                id: uParameter
                text: 'u'

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Spinner:
                size_hint: [0.225, 1]
                id: crystStructSpinner
                text: 'fcc'
                values: 'fcc', 'hcp', 'bcc', 'diamond', 'zincblende', 'rocksalt', 'cesiumchloride', 'fluorite', 'wurtzite'

            TextInput:
                size_hint: [0.225, 1]
                id: aParameterInput
                text: ''
                input_filter: 'float'

            TextInput:
                size_hint: [0.225, 1]
                id: cParameterInput
                text: ''
                input_filter: 'float'

            TextInput:
                size_hint: [0.225, 1]
                id: uParameterInput
                text: ''
                input_filter: 'float'

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, 0.5*height]


        StackLayout:
            size_hint: [1, 1.5*height]

            Label:
                id: CECrystalTitle
                size_hint: [1, 1]
                text: 'CECrystal parameters'


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.225, 1]
                id: cellPar
                text: 'Cellpar'

            Label:
                size_hint: [0.225, 1]
                id: cell
                text: 'Cell'

            Label:
                size_hint: [0.225, 1]
                id: crBasisLabel
                text: 'Coordinate basis'

            Label:
                size_hint: [0.225, 1]
                id: spLabel
                text: 'Spacegroup'

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            TextInput:
                size_hint: [0.225, 1]
                id: cellParInput
                text: ''

            TextInput:
                size_hint: [0.225, 1]
                id: cellInput
                text: ''

            TextInput:
                size_hint: [0.225, 1]
                id: crdBasisInput
                text: ''

            TextInput:
                size_hint: [0.225, 1]
                id: spInput
                text: '1'

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Button:
                size_hint: [0.225, 1]
                id: reconfigureDBButton
                text: 'Reconfigure corr func'

            Button:
                size_hint: [0.225, 1]
                id: saveAsSession
                text: 'Save As'
                on_release: root.show_save_dialog()

            Button:
                size_hint: [0.225, 1]
                id: saveSession
                text: 'Save'
                on_release: root.save_session_to_current_file()

            Button:
                size_hint: [0.225, 1]
                id: loadSession
                text: 'Load session'
                on_release: root.show_load_session_dialog()

            Label:
                size_hint: [0.05, 1]
                text: ''


        StackLayout:
            size_hint: [1, 0.5*height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.2, 1]
                text: 'Status:'
            Label:
                id: status
                size_hint: [0.8, 1]
                text: 'Idle'