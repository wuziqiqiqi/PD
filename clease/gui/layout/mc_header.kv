#:include mc_main.kv
#:include canonical_page.kv
#:include meta_dyn_page.kv
#:include conc_obs_editor.kv
#:include sgc_editor.kv
#: set height 0.05
#: set main_field 0.80
#: set button_height height/main_field

<MCHeader>:
    name: 'MCHeader'
    StackLayout:
        size_hint: [1, 1]
        BoxLayout:
            size_hint: [0.05, 1]

        StackLayout:
            size_hint: [0.90, 1]

            StackLayout:
                size_hint: [1, 0.5*button_height]

            StackLayout:
                size_hint: [1, button_height]

                StackLayout:
                    size_hint: [1./6, 1]

                Label:
                    size_hint: [1./3, 1]
                    text: 'MC page select'

                Spinner:
                    id: pageSpinner
                    size_hint: [1./3, 1]
                    text: root.mc_type
                    values: ['Main', 'Canonical', 'Metadynamics']
                    on_text: root.change_screen(self.text)

                StackLayout:
                    size_hint: [1./6, 1]

            StackLayout:
                size_hint: [1, 0.5*button_height]

            ScreenManager:
                id: sm
                size_hint: [1, 1 - 2*button_height]
                MCMainPage:
                CanonicalMCPage:
                MetaDynPage:

        BoxLayout:
            size_hint: [0.05, 1]
