#: set height 0.05
#: set main_field 0.80
#: set button_height height/main_field

<ConcentrationPage>:
    name: "Concentration"
    StackLayout:

        BoxLayout:
            size_hint: [0.05, 1]

        StackLayout:
            size_hint: [0.90, 1]
            id: mainConcLayout

            StackLayout:
                size_hint: [1, 0.25*button_height]


            StackLayout:
                size_hint: [1, button_height]

                Label:
                    size_hint: [0.5, 1]
                    text: 'Elements in basis'

                Label:
                    size_hint: [0.5, 1]
                    text: 'Grouped basis'


            StackLayout:
                size_hint: [1, button_height]

                TextInput:
                    size_hint: [0.5, 1]
                    id: elementInput
                    text: ''
                    write_tab: False
                    multiline: False
                    on_text_validate: root.apply_Elements_GroupedBasis()

                TextInput:
                    size_hint: [0.5, 1]
                    id: groupedBasisInput
                    text: ''
                    write_tab: False
                    multiline: False
                    on_text_validate: root.apply_Elements_GroupedBasis()

            StackLayout:
                size_hint: [1, 0.5*button_height]

            StackLayout:
                size_hint: [1, button_height]

                Label:
                    size_hint: [0.1, 1]
                    text: ''

                Button:
                    size_hint: [0.3, 1]
                    id: applyElemGroupButton
                    text: 'Apply'
                    on_release: root.apply_Elements_GroupedBasis()

                Label:
                    size_hint: [0.2, 1]
                    text: ''

                Button:
                    size_hint: [0.3, 1]
                    id: addConstraintButton
                    text: 'Add constraint'
                    on_release: root.add_constraint()

                Label:
                    size_hint: [0.1, 1]
                    text: ''

        BoxLayout:
            size_hint: [0.05, 1]


