#: set height 0.05
<ConcentrationPage>:
    StackLayout:
        id: mainConcLayout
        orientation: 'lr-tb'

        Button:
            id: concEditor
            text: 'Concentration'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'Concentration'

        Button:
            id: toSettings
            size_hint: [0.25, height]
            text: 'Settings'
            on_release:
                root.manager.current = 'Settings'
                root.manager.transition.direction = 'left'

        Button:
            id: toNewStruct
            text: 'New structures'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'NewStruct'
                root.manager.transition.direction = 'left'

        Button:
            id: toFit
            text: 'Fit'
            size_hint: [0.25, height]
            on_release:
                root.manager.current = 'Fit'
                root.manager.transition.direction = 'left'

        StackLayout:
            size_hint: [1, 0.25*height]
            Label:
                size_hint: [1, 1]
                text: ''

        StackLayout:
            size_hint: [1, 0.25*height]


        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            Label:
                size_hint: [0.45, 1]
                text: 'Elements in basis'

            Label:
                size_hint: [0.45, 1]
                text: 'Grouped basis'

            Label:
                size_hint: [0.05, 1]
                text: ''

        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.05, 1]
                text: ''

            TextInput:
                size_hint: [0.45, 1]
                id: elementInput
                text: ''
            TextInput:
                size_hint: [0.45, 1]
                id: groupedBasisInput
                text: ''

            Label:
                size_hint: [0.05, 1]
                text: ''

        StackLayout:
            size_hint: [1, 0.5*height]

        StackLayout:
            size_hint: [1, height]

            Label:
                size_hint: [0.1, 1]
                text: ''

            # Button:
            #     size_hint: [0.3, 1]
            #     id: reconfigureButton
            #     text: 'Update settings'
            #     on_release: root.init_settings_class()

            Button:
                size_hint: [0.3, 1]
                id: applyElemGroupButton
                text: 'Apply'
                on_release: root.apply_Elements_GroupedBasis()

            Label:
                size_hint: [0.2, 1]
                text: ''

            Button:
                size_hint: [0.3, 1]
                id: addConstraintButton
                text: 'Add constraint'
                on_release: root.add_constraint()

            Label:
                size_hint: [0.1, 1]
                text: ''


        StackLayout:
            size_hint: [1, 3*height]

            Label:
                size_hint: [0.2, 1]
                text: 'Status:'
            Label:
                id: status
                size_hint: [0.8, 1]
                text: 'Idle'


